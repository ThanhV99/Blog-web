---
import server_url from "@config/serverUrl.json"

export async function fetchApiFilterCategories(type?: string, fields?:string, order?:string, filter?:string) {
  const response = await fetch(`${server_url.server}${server_url.listPosts}?type=${type}&fields=${fields}&order=${order}&${filter}`);
  const data = await response.json();
  return data;
}
---

export default fetchApiFilterCategories;