---
import Base from "@layouts/Base.astro";
import Default from "@layouts/Default.astro";
import PostSingle from "@layouts/PostSingle.astro";
import PostSingleTest from "../layouts/PostSingleTest1.astro";
import { getSinglePage } from "@lib/contentParser.astro";

import { fetchApiListPosts } from '../api/apiListPosts.astro';
import {fetchApiSinglePost} from '../api/apiSinglePost.astro';


export async function getStaticPaths() {
  const data = await fetchApiListPosts("blog.BlogPage", 'description,date_post,feed_image,categories(name),author', '-first_published_at');
  const paths = data.items.map((page: any) => ({
    params: {
      regular: page.meta.slug,
    },
    props: { page },
  }));
  return paths;
}

const { page } = Astro.props;
const { title, meta_title, description, image } = page;
const post = await fetchApiSinglePost(page.meta.slug)

---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  {
    <PostSingleTest post={post} />
  }
</Base>
